}

let iterateBoard = || {
    var numNeighbors = 0

    var row = 0
    while row < 40 {
        var col = 0
        while col < 40 {
            numNeighbors = countNeighbors(row,col)
            if board[row][col] == "@" {
                if (numNeighbors < 2) || (numNeighbors > 3) {
                    board[row][col] = " "
                }
            } else {
                if numNeighbors == 3 {
                    board[row][col] = "@"
                }
            }
            
            col = col + 1
        }
        row = row +1
    }
}

init()
while true {
    drawBoard()
    iterateBoard()
    drawBoard()
}